	<!-- 单机版Jedis -->
	<!-- Jedis配置 -->
	<bean id="poolConfig" class="redis.clients.jedis.JedisPoolConfig">
		<property name="maxIdle" value="20"></property>
		<property name="maxTotal" value="1000"></property>
	</bean>
